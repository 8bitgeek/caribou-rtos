execUserReset()
{
   __var sp;
   __var pc;

   //Debug message
   __message "**********************";
   __message "*** execUserReset ****";
   __message "**********************";

   //Setup Vector Table Offset Register
   __writeMemory32(0x10000000, 0xE000ED08, "Memory");

   //Setup stack pointer
   sp = __readMemory32(0x10000000, "Memory");
   __writeMemory32(sp, 52, "Register");

   //Setup program counter
   pc = __readMemory32(0x10000004, "Memory");
   __writeMemory32(pc, 60, "Register");
}
